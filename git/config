# vim:fileencoding=utf-8:ft=gitconfig

# core config
[core]
	excludesfile = ./ignore
	attributesfile = ./attributes
	whitespace = space-before-tab,trailing-space
	pager = delta
[branch]
	autosetupmerge = true
[fetch]
  prune = true
[pull]
	ff = only
	rebase = true
[push]
	default = tracking
	followTags = true
[rerere]
	enabled = false
[help]
	autocorrect = 1
[difftool]
	prompt = true
[merge]
	log = true
	tool = nvimdiff2
	conflictStyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
	hideResolved = true
[mergetool "nvimdiff2"]
	cmd = nvim -f -d -c 'wincmd l' $LOCAL $MERGED $REMOTE
[rebase]
	autoStash = true
	autoSquash = true
[diff]
	compactionHeuristic = true

# color config
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	pager = true
	ui = auto
[color "diff"]
	meta = black bold
	frag = magenta
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	header = black
	added = green
	changed = magenta
	untracked = yellow
	unmerged = red
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = delta --color-only
[delta]
    features = line-numbers decorations
    syntax-theme = Monokai Extended
    plus-style = syntax "#003800"
    minus-style = syntax "#3f0001"
	navigate = true
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
    hunk-header-decoration-style = cyan box ul
[delta "line-numbers"]
    line-numbers-left-style = cyan
    line-numbers-right-style = cyan
    line-numbers-minus-style = 124
    line-numbers-plus-style = 28
[init]
	defaultBranch = main

[include]
  path = ./aliases
  path = ./user

