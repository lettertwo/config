# vim:fileencoding=utf-8:ft=gitconfig

# core config
[core]
	excludesfile = ./ignore
	attributesfile = ./attributes
	whitespace = space-before-tab,trailing-space
	pager = delta
	hooksPath = "~/.config/git/hooks"
[branch]
	autosetupmerge = true
	sort = -committerdate
[tag]
	sort = -version:refname
[fetch]
  prune = true
[pull]
	ff = only
	rebase = true
[push]
	default = upstream
	autosetupremote = true
	followTags = false
[rerere]
	enabled = false
	autoUpdate = true
[help]
	autocorrect = prompt
[difftool]
	prompt = true
[difftool "nvim_difftool"]
	cmd = nvim -c 'lua vim.g.difftool=true' -c 'packadd nvim.difftool' -c \"DiffTool $LOCAL $REMOTE\"
[difftool "kitty"]
	cmd = kitten diff $LOCAL $REMOTE
[difftool "ksdiff"]
  cmd = ksdiff --diff $LOCAL $REMOTE
[merge]
	log = true
	tool = nvimdiff
	conflictStyle = zdiff3
[mergetool]
	prompt = false
	keepBackup = false
	hideResolved = true
[mergetool "nvimdiff"]
	cmd = nvim -d --cmd 'lua vim.g.mergetool=true' +'wincmd l' $LOCAL $MERGED $REMOTE
[mergetool "ksdiff"]
  trustExitCode = true
  cmd = ksdiff --merge --base $BASE --output $MERGED $LOCAL $REMOTE
[rebase]
	autoStash = true
	autoSquash = true
	updateRefs = true
[diff]
	algorithm = histogram
	compactionHeuristic = true
	colorMoved = true
	tool = nvim_difftool
[worktree]
	guessRemote = true
[maintenance]
	auto = true
	strategy = incremental
[status]
	branch = true

# color config
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	pager = true
	ui = auto
[color "diff"]
	meta = black bold
	frag = magenta
	old = red
	new = blue
	whitespace = red reverse
	context = black
[color "status"]
	header = black
	added = green
	changed = magenta
	untracked = yellow
	unmerged = red
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = delta --color-only
[pager]
	format-patch = delta
[delta]
	features = laserwave
	navigate = true
[absorb]
    maxStack = 50
[init]
	defaultBranch = main

[include]
  path = ./aliases
  path = ./user
  path = ./laserwave.gitconfig
