# vim:fileencoding=utf-8:ft=gitconfig

# core config
[core]
	excludesfile = ./ignore
	attributesfile = ./attributes
	whitespace = space-before-tab,trailing-space
	pager = delta
[branch]
	autosetupmerge = true
[fetch]
  prune = true
[pull]
	ff = only
	rebase = true
[push]
	default = tracking
	followTags = false
[rerere]
	enabled = false
[help]
	autocorrect = 1
[difftool]
	prompt = true
[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[difftool "ksdiff"]
  cmd = ksdiff --diff $LOCAL $REMOTE
[merge]
	log = true
	tool = nvimdiff2
	conflictStyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
	hideResolved = true
[mergetool "nvimdiff2"]
	cmd = nvim -d -c 'wincmd l' $LOCAL $MERGED $REMOTE
[mergetool "ksdiff"]
  trustExitCode = true
  cmd = ksdiff --merge --base $BASE --output $MERGED $LOCAL $REMOTE
[rebase]
	autoStash = true
	autoSquash = true
	updateRefs = true
[diff]
	compactionHeuristic = true
[worktree]
	guessRemote = true

# color config
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	pager = true
	ui = auto
[color "diff"]
	meta = black bold
	frag = magenta
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	header = black
	added = green
	changed = magenta
	untracked = yellow
	unmerged = red
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = delta --color-only
[delta]
	features = laserwave
	navigate = true
[absorb]
    maxStack = 50
[init]
	defaultBranch = main

[include]
  path = ./aliases
  path = ./user
  path = ./laserwave.gitconfig
