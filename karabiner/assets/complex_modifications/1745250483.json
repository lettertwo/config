{
  "title": "Google Chrome URL Copy",
  "maintainers": [
    "doxxx93"
  ],
  "rules": [
    {
      "description": "Google Chrome: Command + Shift + C â†’ Copy URL and unfocus address bar",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.google\\.Chrome$"
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "command",
                "shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": [
                "command"
              ]
            },
            {
              "key_code": "c",
              "modifiers": [
                "command"
              ]
            },
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}
